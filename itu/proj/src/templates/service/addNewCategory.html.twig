{% extends 'base.html.twig' %}
{# Author: Tomáš Lisický (xlisic01) #}

{% block title %}Define new service category | CarInfo{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href={{asset('css/style.css')}}>
{% endblock %}

{% block body %}
<div class="content container"> 
	<div class="row">
		<div class="col-sm-4"></div>
		<div class="col-sm-4 well well-lg">
			<h1 class="jumbotron text-center">Define new service category</h1>
				{{ form_start(addNewCategory) }}
					<div class="row">
						<div class="col-sm-6 form-group">
							<label>Name: </label>
							<br>
							{{ form_widget(addNewCategory.name, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
					<button type="submit" class="btn btn-lg btn-primary">Add new category</button>
					<a class="btn btn-lg btn-danger col-sm-offset-2" href="{{ app.request.headers.get('referer') }}" role="button">Cancel</a>
				{{ form_end(addNewCategory) }}
		</div>
		<div class="col-sm-4"></div>
	</div>
</div>

{% endblock %}
